<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:WeatherAppAvalonia"
             x:Class="WeatherAppAvalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="avares://WeatherAppAvalonia/Styles/Styles.axaml" />
    </Application.Styles>
             
    <Application.Resources>
        <SolidColorBrush x:Key="ColorBoxId" Color="#0F151C"/>
        <SolidColorBrush x:Key="ColorSubBoxId" Color="#181F27"/>
        <SolidColorBrush x:Key="ColorSubTextId" Color="#475971"/>
    </Application.Resources>
                    
</Application>